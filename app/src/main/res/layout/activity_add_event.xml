<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginTop="64dp"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:background="@drawable/rectangular_black_box"
      android:hint="Event Name"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:background="@drawable/rectangular_black_box"
      android:hint="Event Location"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:background="@drawable/rectangular_black_box"
      android:hint="Event Description"/>

    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:background="@drawable/rectangular_black_box"
      android:hint="Event Category"/>

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:layout_gravity="center"
      android:background="@color/local_darkBlue"
      app:cardCornerRadius="4dp"
      >

      <TextView
        android:id="@+id/btn_AR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/rectangular_blue_box"
        android:gravity="center"
        android:text="Add AR Painting!"
        android:textColor="@color/local_darkBlue"/>

    </android.support.v7.widget.CardView>

  </LinearLayout>
  <TextView
    android:id="@+id/btn_confirm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@color/local_darkBlue"
    android:gravity="center"
    android:text="CONFIRM"
    android:textColor="#fff"/>
</LinearLayout>